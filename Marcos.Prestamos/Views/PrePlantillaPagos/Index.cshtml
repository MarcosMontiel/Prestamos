@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PagoRequerido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRequeridaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PagoRealizado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
